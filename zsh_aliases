# zsh_aliases: user-defined aliases for zsh
#
# Color support for ls and grep
alias ls='ls -G'
alias grep='grep --color=auto'

# Listing directories
alias l.='ls -ld .*'
alias ll='ls -l'
alias la='ls -lA'
alias lh='ls -Aoh'
alias lt='ls -lAtr'

# Superuser privileges
alias slide='sudo -s'

# Compiling
alias cxx='/opt/mongodbtoolchain/v2/bin/clang++ --std=c++14'

#" vim: filetype=zsh
